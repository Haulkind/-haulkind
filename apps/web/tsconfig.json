{
  "compilerOptions": {
    "target": "ES2017",
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../shared/**/*.ts",
    "../../drizzle/schema.ts",
    "../../server/routers.ts",
    "../../server/routers/items.ts",
    "../../server/routers/serviceAreas.ts",
    "../../server/routers/pricing.ts",
    "../../server/routers/jobs.ts",
    "../../server/routers/media.ts",
    "../../server/routers/drivers.ts",
    "../../server/routers/dispatch.ts",
    "../../server/routers/ledger.ts",
    "../../server/routers/customerAuth.ts",
    "../../server/_core/trpc.ts",
    "../../server/_core/context.ts",
    "../../server/_core/cookies.ts",
    "../../server/_core/systemRouter.ts",
    "../../server/_core/notification.ts",
    "../../server/_core/sdk.ts",
    "../../server/_core/env.ts",
    "../../server/_core/types/**/*.ts",
    "../../server/db.ts",
    "../../server/storage.ts"
  ],
  "exclude": ["node_modules"]
}
